BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            color: (1,0.5,0.5,1)
         
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert Miles to km'
        on_press: app.handle_calculate()
    Label:

        id: output_label
        font_size: 48
        text: '54.717'
        color: (0.92, 0.77, 0.58, 1)
        canvas.before:
            Color:
                rgba: 1,0,1,1


